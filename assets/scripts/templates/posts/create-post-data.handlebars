<div class="create-container">
  <h3 class="create-form">Share with Others</h3>
  <form id="create-post">
    <label for="title-name" class="form-control-label clear">Title:</label>
    <br>
    <input class="form-control clear" type="text" name="post[title]" placeholder="Title" maxlength="50">
    <br>
    <label for="title-name" class="form-control-label">Content:</label>
    <br>
    <textarea class="form-control textarea clear" name="post[content]" placeholder="Type here" maxlength="282" rows="7"></textarea>
    <button type="button" class="btn btn-default clear-form" aria-label="Clear">Clear Form</button>
    <br>
    <button type="submit" class="btn btn-default">Publish</button>
  </form>
</div>
