<div class="post-content" data-id="{{post.id}}">
  <div data-id='{{post.id}}'>
    <h3 class="index-title" data-id='{{post.id}}'>{{post.title}}</h3>
    <p>{{post.content}}</p>
  </div>

  {{#if post.editable}}
    <div>
      <div data-id="{{post.id}}" class="btn-group post-destroy">
        <button type="button" data-id="{{post.id}}" class="btn btn-danger">
          Delete
        </button>
      </div>

      <button data-id="{{post.id}}" type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal" data-whatever="@mdo" id="edit-modal">Edit</button>

      <div data-id="{{post.id}}" class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Edit Post</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
            </div>
            <p class="update-failure"></p>
            <div class="modal-body">
              <form data-id="{{post.id}}" class="modal-edit" id="edit-post">
                <div class="form-group">
                  <label for="title-name" class="form-control-label">Title:</label>
                  <br>
                  <input data-id="{{post.title}}" class="edit-title" type="text" name="post[title]" value="{{post.title}}" maxlength="50">
                </div>
                <div class="form-group">
                  <label for="message-text" class="form-control-label">Content:</label>
                  <br>
                  <textarea data-id="{{post.content}}" class="edit-content" name="post[content]" value="{{post.content}}" maxlength="282" rows="7">{{post.content}}</textarea>
                </div>
                <button data-id="{{post.id}}" type="submit" class="btn btn-default">Confirm</button>
              </form>
              <div class="modal-footer">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div></div>
  {{/if}}
  <br>
  <div class="index-comment">{{> ../comments/index-comment}}</div>
  <br>
  <h4 class="back-to-menu">Back</h4>
</div>
