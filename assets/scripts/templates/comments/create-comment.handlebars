<div data-id="{{id}}" class="create-container">
  <h3 data-id="{{id}}" class="create-form">Comment</h3>
  <form data-id="{{post_id}}" id="create-comment">
    <textarea data-id="{{id}}" class="form-control textarea clear" name="comment[body]" placeholder="Type here" maxlength="250" rows="5"></textarea>
    <button data-id="{{id}}" type="button" class="btn btn-default clear-form" aria-label="Clear">Clear Form</button>
    <br>
    <button data-id="{{id}}" type="submit" class="btn btn-default">Publish</button>
  </form>
</div>
